<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Project Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: white;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 20px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .back-link {
      color: black;
      text-decoration: none;
      font-size: 1rem;
    }

    .back-link:hover {
      text-decoration: underline;
      color: black;
    }

    .header-buttons {
      display: flex;
      gap: 10px;
    }

    .btn-custom {
      background-color: #d9d9d9;
      border: none;
      padding: 10px 20px;
      font-weight: bold;
      border-radius: 10px;
      text-decoration: none;
      color: black;
      font-size: 0.9rem;
    }

    .btn-custom:hover {
      background-color: #bfbfbf;
      color: black;
    }

    .project-title {
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 30px;
    }

    .content-box {
      background-color: #d9d9d9;
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 20px;
      min-height: 100px;
    }

    .content-box h5 {
      font-weight: bold;
      margin-bottom: 15px;
      font-size: 1.1rem;
    }

    .content-box p {
      margin-bottom: 10px;
      line-height: 1.5;
    }

    .posts-section {
      position: relative;
    }

    .posts-buttons {
      position: absolute;
      top: 20px;
      right: 20px;
      display: flex;
      gap: 5px;
    }

    .posts-content {
      margin-top: 50px;
      min-height: 150px;
    }
  </style>
</head>
<body>

  <div class="container-fluid">
    <!-- Header -->
    <div class="header">
      <a href="/lecturer" class="back-link">< All Projects</a>
      <div class="header-buttons">
        <a href="/addPost/<%= project.projectid %>" class="btn-custom">Add Post</a>
        <a href="#" class="btn-custom">Sign up</a>
      </div>
    </div>

    <!-- Project Title -->
    <div class="project-title">
      <% if (project) { %>
        <%= project.project_title || 'Project Name' %>
      <% } else { %>
        Project Name
      <% } %>
    </div>

    <!-- Project Content -->
    <% if (project) { %>
      <!-- Facilitator Section -->
      <div class="content-box">
        <h5>Facilitator:</h5>
        <p><%= project.project_head || 'Not specified' %></p>
      </div>

      <!-- Description Section -->
      <div class="content-box">
        <h5>Description:</h5>
        <p><%= project.description || 'No description available' %></p>
      </div>

      <!-- Project Details Section -->
      <div class="content-box">
        <h5>Project Details:</h5>
        <p><strong>Start Date:</strong> 
          <% 
            if (project.project_start) {
              var startDate = new Date(project.project_start);
              var formattedStartDate = (startDate.getDate() + '').padStart(2, '0') + '/' + 
                            ((startDate.getMonth() + 1) + '').padStart(2, '0') + '/' +                         
                              startDate.getFullYear();
          %>
            <%= formattedStartDate %>
          <% } else { %>
            Not specified
          <% } %>
        </p>
        <p><strong>End Date:</strong> 
          <% 
            if (project.project_end) {
              var endDate = new Date(project.project_end);
              var formattedEndDate = (endDate.getDate() + '').padStart(2, '0') + '/' + 
                                        ((endDate.getMonth() + 1) + '').padStart(2, '0') + '/' +                         
                                        endDate.getFullYear();
          %>
            <%= formattedEndDate %>
          <% } else { %>
            Not specified
          <% } %>
        </p>
        <% if (project.project_status) { %>
          <p><strong>Status:</strong> <%= project.project_status %></p>
        <% } %>
      </div>

      <!-- Members Section -->
      <div class="content-box">
        <h5>Project Members:</h5>
        <% if (members && members.length > 0) { %>
          <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 10px;">
            <% members.forEach(function(member) { %>
              <div style="background-color: black; color: white; padding: 8px 15px; border-radius: 20px; font-size: 0.9rem;">
                <%= member.username %> 
                <small>(<%= member.roleid === 2 ? 'Lecturer' : 'Student' %>)</small>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p>No members assigned to this project.</p>
        <% } %>
      </div>

      <!-- Posts Section -->
      <div class="content-box posts-section">
        <h5>Posts:</h5>
        <div class="posts-buttons">
          <a href="#" class="btn btn-sm btn-outline-dark me-2">Edit</a>
          <a href="#" class="btn btn-sm btn-outline-danger">Delete</a>
        </div>
        <div class="posts-content">
          <% if (posts && posts.length > 0) { %>
            <% posts.forEach(post => { %>
              <div class="mb-3 p-3 bg-white rounded shadow-sm">
                <p><%= post.description %></p>
                <small class="text-muted">By <%= post.username %> on <%= new Date(post.submission_date).toLocaleString() %></small>
                
                <% if (user && user.roleid === 2 && user.accountid === post.accountid) { %>
                  <div class="mt-2">
                    <a href="/editPost/<%= post.submissionsid %>" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/deletePost/<%= post.submissionsid %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a>
                  </div>
                <% } %>
              </div>
            <% }) %>
          <% } else { %>
            <p>No posts available yet.</p>
          <% } %>
        </div>
      </div>

    <% } else { %>
      <div class="content-box">
        <p class="text-center">No project found.</p>
      </div>
    <% } %>
  </div>

</body>
</html>

